
<div class="flex p-4 my-4 md:mx-5">
    <div class="mx-auto p-2 md:mx-28 border-r-4 border-b-4 border-double border-gray-500 rounded-lg bg-orange-200 shadow-lg shadow-current"> 
          <h1 id="heading" class="text-3xl font-extrabold tracking-wider text-gray-700">The Tech Blog</h1>
    </div>           
</div>

<div class="bg-orange-200 mb-8 mx-2 py-2 md:mx-20 md:px-10 shadow-xl rounded-lg shadow-current">

{{#each blogposts as |blogpost| }}
 <div class="flex flex-wrap flex-col m-5 border-2 border-gray-700 shadow-lg shadow-current rounded">
    <div class="flex flex-wrap flex-col md:flex-row md:justify-between bg-gray-700">               
      <div class="px-4 py-2">
          <h2 class="text-xl text-orange-200 font-bold">
            <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
          </h2>
      </div>                
      <div class="px-4 py-2">
          <h2 class="text-sm text-orange-200">Posted by {{blogpost.user.username}} on {{format_date blogpost.date_created}}</h2>
      </div>               
    </div>            
    <p class="p-4">{{blogpost.content}}</p>
  </div>
  {{/each}}
 </div> 

