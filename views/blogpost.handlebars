
<div id="comment-post" class="bg-orange-200 mb-8 mx-2 py-2 md:mx-20 md:px-10 shadow-xl rounded-lg shadow-current">

 <div class="flex flex-wrap flex-col m-5 border-2 border-gray-700 shadow-lg shadow-current rounded">
    <div class="flex flex-wrap flex-col md:flex-row md:justify-between bg-gray-700">               
      <div class="px-4 py-2">
          <h2 class="text-xl text-orange-200 font-bold">
           {{title}}
          </h2>
      </div>                
      <div class="px-4 py-2">
          <h2 class="text-sm text-orange-200">Posted by {{user.username}} on {{format_date date_created}}</h2>
      </div>               
    </div>            
    <p class="p-4">{{content}}</p>
    <p class="hidden text-black mx-auto">{{id}}</p>

      <div id="update-post" class="hidden bg-orange-200 py-2 md:mx-20 md:px-10 shadow-xl rounded-lg shadow-current">
    <div class="flex flex-wrap flex-col m-5 border-2 border-gray-700 shadow-lg shadow-current rounded">
      <div class="flex flex-wrap flex-col bg-gray-700">               
          <div class="px-4 py-2">
              <h2 class="text-xl text-orange-200 font-bold">Edit Post</h2>
          </div>                       
      </div>            
      <form class="form update-form">
        <div class="form-group flex flex-wrap flex-col px-4 py-2">
          <label for="update-name">Title</label>
          <textarea class="form-input p-3" type="text" id="update-name" name="update-name">{{title}}</textarea>
        </div>
        <div class="form-group flex flex-wrap flex-col px-4 py-2">
          <label for="update-desc">Content</label>
          <textarea class="form-input p-3" id="update-desc" name="update-desc">{{content}}</textarea>
        </div>
        <div class="form-group flex flex-wrap flex-col ">
          <button id="update-btn" class="btn text-white rounded-lg bg-gray-500 hover:bg-gray-700 mx-4 my-4 p-4" type="submit">Update Post</button>         
        </div>
        <p class="hidden" id="update-id">{{id}}</p>
      </form>          
    </div>         
  </div> 


    <div>
    {{#if comments.length}}
    <div class="comment-list flex flex-wrap flex-col m-5 border-2 border-orange-200">
      {{#each comments as |comment|}} 
        <div class="flex flex-wrap flex-col md:flex-row md:justify-between bg-gray-500 my-4 py-4 shadow-xl rounded-lg shadow-current">             
             
          <p class="p-4 text-white">{{user.username}}: {{comment.comment_text}}</p>
              
          
        </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

   {{#if logged_in}}
  <div class="flex flex-wrap flex-col m-5 ">
    <div class="flex flex-wrap flex-col md:flex-row md:justify-between p-5"></div> 

    <form class="new-comment-form flex flex-wrap flex-col">       
      
          <label class="font-bold" for="comment-desc">Comment</label>
          <textarea class="p-3" id="comment-desc" name="comment-desc"></textarea>
    
        <p class="hidden" id="blogpost-id">{{id}}</p>
        <button id="comment-btn" class="btn text-white rounded-lg bg-gray-500 hover:bg-gray-700 mx-4 my-4 p-4" type="submit">Submit</button>
      
    </form>
    
  </div> 
  {{/if}}
  
  
  {{#if logged_in}}
   
 <script src="/js/comment.js"></script>

 {{/if}}


  <script src="/js/update.js"></script>